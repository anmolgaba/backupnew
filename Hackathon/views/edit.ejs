            <label>Image</label>
            <input type="text" name="event[description]" value="<%=event.description%>">
        </div>
        <div class="field">
            <label>event Content</label>
            <textarea name="event[cost]"><%=event.cost%></textarea>
        </div>
        <div class="field">
            <label>event Content</label>
            <textarea name="event[startdate]"><%=event.startdate%></textarea>
        </div>
        <div class="field">
            <label>event Content</label>
            <textarea name="event[enddate]"><%=event.enddate%></textarea>
        </div>
