<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New event</div>
    <form class="ui form" action="/events" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="event[title]" placeholder="title">
        </div>
        <div class="field">
            <label>Description</label>
            <input type="text" name="event[description]">
        </div>
        <div class="field">
            <label>Event Cost</label>
            <textarea name="event[cost]"></textarea>
        </div>
        <div class="field">
            <label>Start Date</label>
            <input type="text" name="event[startdate]">
        </div>
        <div class="field">
            <label>End Date</label>
            <input type="text" name="event[enddate]">
        </div>
        
        <input class="ui violet basic button big" type="submit">
    </form>
</div>

<% include ./partials/footer %>