<html>
    <head>
        <title>EnternMe</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/style.css">
    </head>
    <body class="login-signup-page">
        <div class="d-flex h-100 align-items-center justify-content-center">
            <div class="container col-sm-6 col-md-6 col-lg-4">
                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>
    
                <div class="card card-translucent-custom p-2">
                    <h1>EntertainMe</h1>
                    Your Movie and TV Shows Library!
                    <hr>
                    <form action="/login" method="post">
                        <div class="form-group">
                            <label>Username</label>
                            <input type="text" class="form-control" name="username">
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password">
                        </div>
                        <button type="submit" class="btn btn-info btn-lg">Login</button>
                        <a href="/signup" class="btn btn-info btn-lg">Signup</a>
                    </form>
                </div>
            </div>
        </div>

<% include ../views/partials/footer %>