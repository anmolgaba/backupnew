<% include ../views/partials/header %>

<div class="container">
    <h4>Here are the search results!</h4>
    <div class="row d-flex">
        <% results["results"].forEach(function(entry){ %>
            <% if(entry.poster_path){ %>
                <div class="d-flex col-8 col-sm-4 col-md-3 col-lg-2 mb-3 justify-content-between justify-content-sm-center">
                    <div>
                        <img src="https://image.tmdb.org/t/p/w300<%=entry.poster_path%>" class="img-fluid shadow-lg">
                        <div>
                            <% if(entry.media_type=="movie") {var iconval="film"} else {iconval="tv"} %>
                            <% if(entry.media_type=="movie") {var displayname=entry.title} else {displayname=entry.name} %>
                            <a class="text-reset d-inline-block text-truncate small font-weight-bold" data-toggle="tooltip" data-placement="bottom" title="<%=entry.title%>" style="max-width: 150px;"><i class="fas fa-<%=iconval%> mr-2"></i><%=displayname%></a>
                            <% if(entry.media_type=="movie") {var actionroute="/movies"} else {actionroute="/tvshows"} %>
                            <form action=<%=actionroute%> method="post">
                                <input class="d-none" name="id" value="<%=entry.id%>" type="text">
                                <button class="btn btn-secondary">Add Entry!</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% } %>
        <% }); %>
    </div>
</div>

<% include ../views/partials/footer %>